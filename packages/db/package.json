  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.22.8"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.31.4",
    "pg": "^8.16.3",
    "postgres": "^3.4.7"
  }
