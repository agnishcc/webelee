{
  "name": "@repo/db",
  "version": "1.0.0",
  "description": "",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --max-warnings 0",
    "db:generate": "bunx drizzle-kit generate",
    "db:push": "dotenv -e ../../.env -- bunx drizzle-kit push",
    "db:push:prod": "dotenv -e ../../.env.production -- bunx drizzle-kit push",
    "db:migrate": "dotenv -e ../../.env -- bunx drizzle-kit migrate",
    "db:migrate:prod": "dotenv -e ../../.env.production -- bunx drizzle-kit migrate",
    "db:studio": "dotenv -e ../../.env bunx drizzle-kit studio",
    "db:studio:prod": "dotenv -e ../../.env.production bunx drizzle-kit studio",
    "db:migration:drop": "bunx drizzle-kit drop",
    "introspect": "dotenv -e ../../.env bunx drizzle-kit introspect:pg",
    "introspect:prod": "dotenv -e ../../.env.production bunx drizzle-kit introspect:pg"
  },
  "keywords": [],
